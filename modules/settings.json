// Place your settings in this file to overwrite the default settings
{
    // Acrolinx
    "acrolinx.serverAddress": "https://microsoft-ce-csi.acrolinx.cloud",

    // Editor
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.insertSpaces": true,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [1, 2, 3, 4, 5, 76, 80, 100, 150, 300],
    "editor.wordWrap": "wordWrapColumn",
    //"editor.wordWrapColumn": 80,
    "editor.wordWrapColumn": 100,

    // Reflow paragraph configuration
    //"reflowMarkdown.preferredLineLength": 79,
    "reflowMarkdown.preferredLineLength": 100,

    // Misc. Settings
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolSortOrder": "position",
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "extensions.autoUpdate": true,
    "vsicons.dontShowNewVersionMessage": true,
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    // Status bar settings
    "codepoint.statusbar": "unicode",
    "debug.showInStatusBar": "always",
    "git.enableStatusBarSync": false,
    "selectline.displayFormat": "$(list-ordered) Lines: %d",
    "selectline.statusbarPriority": 1,
    "workbench.statusBar.visible": true,

    // Files
    "files.trimTrailingWhitespace": true,
    "files.defaultLanguage": "markdown",

    // Terminal
    "terminal.integrated.shell.windows": "C:/Program Files/PowerShell/6/pwsh.exe",
    "terminal.integrated.fontFamily": "Menlo, Monaco, Consolas, \"Droid Sans Mono\", \"Courier New\", monospace, \"Droid Sans Fallback\"",
    "terminal.integrated.fontSize": 11,
    "terminal.external.windowsExec": "C:/Program Files/PowerShell/6/pwsh.exe",
    "[powershell]": {
        "files.encoding": "utf8bom"
    },

    // Mardown-PDF
    "markdown-pdf.format": "Letter",
    "markdown-pdf.margin.top": "0.75in",
    "markdown-pdf.margin.bottom": "0.75in",
    "markdown-pdf.margin.right": "0.5in",
    "markdown-pdf.margin.left": "0.5in",

    // Docs Extension settings
    "docs.templates.alias": "sewhee",
    "docs.templates.githubid": "sdwheeler",

    // Configure editor settings to be overridden for [markdown] language.
    "markdown.showToolbar": true,
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.tabSize": 2
    },

    // textlint
    "textlint.configPath": "C:\\Users\\swheeler.000\\textlintrc.json",
    "textlint.run": "onType",

    // MDLint
    "markdownlint.config": {
        "default": true,

        // MD001 - Heading levels should only increment by one level at a time
        "header-increment": true,
        // MD002 - First heading should be a top level heading
        "first-header-h1": {
            "level": 1
        },
        // MD003 - Heading style
        "header-style": {
            "style": "atx"
        },
        // MD004 - Unordered list style
        "ul-style": {
            "style": "consistent"
        },
        // MD005 - Inconsistent indentation for list items at the same level
        "list-indent": true,
        // MD006 - Consider starting bulleted lists at the beginning of the line
        "ul-start-left": true,
        // MD007 - Unordered list indentation
        "ul-indent": {
            "indent": 2
        },
        // MD008 - undefined
        // MD009 - Trailing spaces
        "no-trailing-spaces": true,
        // MD010 - Hard tabs
        "no-hard-tabs": true,
        // MD011 - Reversed link syntax
        "no-reversed-links": true,
        // MD012 - Multiple consecutive blank lines
        "no-multiple-blanks": true,
        // MD013 - Line length
        "line-length": {
            "line_length": 100,
            "code_blocks": false,
            "tables": false,
            "headers": true
        },
        // MD014 - Dollar signs used before commands without showing output
        "commands-show-output": true,
        // MD015 - undefined
        // MD016 - undefined
        // MD017 - undefined
        // MD018 - No space after hash on atx style heading
        "no-missing-space-atx": true,
        // MD019 - Multiple spaces after hash on atx style heading
        "no-multiple-space-atx": true,
        // MD020 - No space inside hashes on closed atx style heading
        "no-missing-space-closed-atx": true,
        // MD021 - Multiple spaces inside hashes on closed atx style heading
        "no-multiple-space-closed-atx": true,
        // MD022 - Headings should be surrounded by blank lines
        "blanks-around-headers": true,
        // MD023 - Headings must start at the beginning of the line
        "header-start-left": true,
        // MD024 - Multiple headings with the same content
        "no-duplicate-header": true,
        // MD025 - Multiple top level headings in the same document
        "single-h1": true,
        // MD026 - Trailing punctuation in heading
        "no-trailing-punctuation": {
            "punctuation": ".,;:!"
        },
        // MD027 - Multiple spaces after blockquote symbol
        "no-multiple-space-blockquote": true,
        // MD028 - Blank line inside blockquote
        "no-blanks-blockquote": true,
        // MD029 - Ordered list item prefix
        "ol-prefix": {
            "style": "one_or_ordered"
        },
        // MD030 - Spaces after list markers
        "list-marker-space": true,
        // MD031 - Fenced code blocks should be surrounded by blank lines
        "blanks-around-fences": true,
        // MD032 - Lists should be surrounded by blank lines
        "blanks-around-lists": true,
        // MD033 - Inline HTML
        "no-inline-html": {
            "allowed_elements": [
                "properties",
                "tags"
            ]
        },
        // MD034 - Bare URL used
        "no-bare-urls": true,
        // MD035 - Horizontal rule style
        "hr-style": "---",
        // MD036 - Emphasis used instead of a heading
        "no-emphasis-as-header": true,
        // MD037 - Spaces inside emphasis markers
        "no-space-in-emphasis": true,
        // MD038 - Spaces inside code span elements
        "no-space-in-code": true,
        // MD039 - Spaces inside link text
        "no-space-in-links": true,
        // MD040 - Fenced code blocks should have a language specified
        "fenced-code-language": false,
        // MD041 - First line in file should be a top level heading
        "first-line-h1": false,
        // MD042 - No empty links
        "no-empty-links": true,
        // MD043 - Required heading structure
        // MD044 - Proper names should have the correct capitalization
        "proper-names" : {
            "names": [
                "PowerShell",
                "IntelliSense",
                "Authenticode",
                "CentOS",
                "Contoso",
                "CoreOS",
                "Debian",
                "Ubuntu",
                "openSUSE",
                "RHEL",
                "JavaScript"
            ],
            "code_blocks": false
        },
        // MD045 - Images should have alternate text (alt text)
        "no-alt-text": true
    },

    // Code Spell Checker
    "cSpell.userWords": [
        "Authenticode",
        "Autosave",
        "CentOS",
        "Contoso",
        "CoreOS",
        "DHCP",
        "Debian",
        "Discoverability",
        "Etag",
        "Etags",
        "Fabrikam",
        "GUID",
        "HTTPS",
        "IntelliSense",
        "Intranet",
        "JavaScript",
        "MAML",
        "Pandoc",
        "PowerShell",
        "Prerelease",
        "RHEL",
        "Runspace",
        "SDKs",
        "Sddl",
        "Ubuntu",
        "assetid",
        "autodetect",
        "azurecli",
        "backticks",
        "blog",
        "callout",
        "callouts",
        "carmonm",
        "checkboxes",
        "cmdlet",
        "cmdlets",
        "customizations",
        "deserialization",
        "deserialized",
        "devlang",
        "differentiators",
        "documentationcenter",
        "failover",
        "hashtable",
        "hashtables",
        "hotfix",
        "hotfixes",
        "interpretted",
        "lifecycle",
        "markdig",
        "nslookup",
        "onboarding",
        "openSUSE",
        "pltfrm",
        "rehydrated",
        "remoting",
        "runbook",
        "runbooks",
        "runspaces",
        "runtimes",
        "scalability",
        "scanability",
        "scriptable",
        "sdwheeler",
        "sewhee",
        "subfolder",
        "subnet",
        "subnets",
        "taskbar",
        "triaged",
        "untrusted",
        "virtualized",
        "w3wp"
    ],
    "cSpell.language": "en,en-US",
    "cSpell.dictionaryDefinitions": [{
        //"name": "azureTerms",
        //"path": "/Users/swheeler.000/.vscode/azure.txt"
    }],
    "cSpell.languageSettings": [
        {
            "languageId": "*",
            "local": "en",
            "dictionaries": ["wordsEn"]
        },
        {
            "languageId": "*",
            "local": "en-US",
            "dictionaries": ["wordsEn"]
        },
        {
            "languageId": "*",
            "local": "en-GB",
            "dictionaries": ["wordsEnGb"]
        },
        {
            "languageId": "*",
            "dictionaries": [
                "companies",
                "softwareTerms",
                "misc"
            ]
        },
        {
            "languageId": "markdown",
            "dictionaries": ["azureTerms", "powershell"]
        }
    ],
    "cSpell.showStatus": false,

    // git extension
    "git.autofetch": true,

    // github issues-prs
    "github.username": "sdwheeler",
    "github.repositories": [
        "powershell/powershell-docs",
        "powershell/powershell"
    ],

    // GitLens settings
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.advanced.messages": {
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },

    // Programming Language tools
    "csharp.suppressDotnetRestoreNotification": true,
    "omnisharp.projectLoadTimeout": 120,
    // Enable/disable default YAML formatter (requires restart)
    "yaml.format.enable": true,
    // Associate schemas to Yaml files in the current workspace
    "yaml.schemas": {
        "toc": "/Users/swheeler.000/.vscode/toc.json",
        "file:///c%3A/Users/SWHEELER.000/.vscode/extensions/docsmsft.docs-yaml-0.2.4/schemas/toc.schema.json": "/toc\\.yml/i"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline"
}
